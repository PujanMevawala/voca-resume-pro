# Database
MONGODB_URI=mongodb://localhost:27017/vocaresume
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Service URLs
LLM_URL=http://localhost:11435
EMBEDDER_URL=http://localhost:3003
VECTOR_URL=http://localhost:6333
STT_URL=http://localhost:3001
TTS_URL=http://localhost:3002
MINIO_URL=http://localhost:9000

# MinIO Storage
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=vocaresume

# External LLM API Keys (for enhanced features)
# Get Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Get Grok API key from: https://console.x.ai/
GROK_API_KEY=your-grok-api-key-here

# Optional: OpenAI API key (if you want to use OpenAI models)
OPENAI_API_KEY=your-openai-api-key-here

# Google Cloud TTS (FREE: 4M characters/month)
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Download JSON key file and set path, or set GOOGLE_CLOUD_PROJECT_ID for automatic discovery
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/google-cloud-key.json
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
